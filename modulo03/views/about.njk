{% extends "layout.njk" %}

{% block head %}
    <title>Sobre</title>
{% endblock %}

{% block content %}
    <div id="wrapper">
        <h1>{{ about.name }}</h1>
        <img src="{{ about.logo_url }}" alt="Imagem de {{ about.name }}">
        <h2>{{ about.description }}</h2>
        <h2>Principais Tecnologias Utilizadas:</h2>
        <ul>
            {% for technology in about.technologies %}
                <li>{{ technology.name }}</li>
            {% endfor%}
        </ul>
    </div>
    
    <div id="links-footer" class="links">
        {% for link in about.links %}
            <a href="{{ link.url }}" target="_blank">{{link.name }}</a>
        {% endfor %}
    </div>
{% endblock %}